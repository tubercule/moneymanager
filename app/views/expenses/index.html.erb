<h1>Listing expenses</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Buying date</th>
      <th>Paying date</th>
      <th>Category</th>
      <th>Beneficiary</th>
      <th>Payment method</th>
			<th>Value</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.title %></td>
        <td><%= expense.buying_date %></td>
        <td><%= expense.paying_date %></td>
        <td><%= Category.find(expense.category_id).title %></td>
        <td><%= Beneficiary.find(expense.beneficiary_id).title %></td>
        <td><%= PaymentMethod.find(expense.payment_method_id).title %></td>
        <td><%= number_to_currency(expense.value / 100.0) %></td>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

